# Supabase Configuration
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# RefBase MCP Configuration
MCP_SERVER_PORT=3000
MCP_SERVER_HOST=localhost

# CORS Configuration (SECURE)
CORS_ENABLED=true
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# SSL Configuration (RECOMMENDED FOR PRODUCTION)
SSL_ENABLED=true
SSL_KEY_FILE=path/to/private.key
SSL_CERT_FILE=path/to/certificate.crt

# RefBase Integration (NEVER COMMIT ACTUAL KEYS)
REFBASE_API_KEY=your_refbase_api_key_here
REFBASE_API_URL=https://refbase.dev/api
REFBASE_API_TIMEOUT=30000
REFBASE_RETRY_ATTEMPTS=3

# Security Settings
STRICT_VALIDATION=true
MAX_PAYLOAD_SIZE=1048576
AUDIT_LOGGING_ENABLED=true

# Rate Limiting (SECURITY)
RATE_LIMITING_ENABLED=true
RATE_LIMIT_USER_WINDOW_MS=60000
RATE_LIMIT_USER_MAX_REQUESTS=100

# Environment
NODE_ENV=production